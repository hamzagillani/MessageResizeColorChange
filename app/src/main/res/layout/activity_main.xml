<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Message"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffff"
         />
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="top"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Font Size"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffff"
        />
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp">
        <RadioButton
            android:id="@+id/id_red_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="15dp"
            android:textColor="#fc0116"
            android:onClick="changecolor"/>
        <RadioButton
            android:id="@+id/id_blue_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="15dp"
            android:textColor="#0810f5"
            android:onClick="changecolor"/>
        <RadioButton
            android:id="@+id/id_green_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textSize="15dp"
            android:textColor="#03ff20"
            android:onClick="changecolor"/>
    </RadioGroup>

    <Button
        android:id="@+id/id_save_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/savesetting"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:onClick="SaveSetting"/>
    <Button
        android:id="@+id/id_clear_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clearsetting"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:onClick="ClearSetting"/>







</LinearLayout>